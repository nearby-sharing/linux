<?xml version="1.0" encoding="utf-8" ?>
<interface>
	<object class="AdwPreferencesDialog" id="preferencesDialog">
		<property name="title" translatable="yes">Settings</property>
		<child>
			<object class="AdwPreferencesPage">
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Appearance</property>
						<child>
							<object class="AdwSwitchRow" id="darkThemeToggle">
								<property name="title">Dark theme</property>
								<property name="subtitle">Force dark mode</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Connected Devices Platform</property>
						<child>
							<object class="AdwEntryRow">
								<property name="title">Device Name</property>
							</object>
						</child>
						<child>
							<object class="AdwSwitchRow">
								<property name="title">Advertise via Network</property>
								<property name="subtitle">Allow all devices on your network to discover you</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</object>
</interface>